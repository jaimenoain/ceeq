{
  "output": {
    "style": "xml",
    "filePath": "repomix-output.xml",
    "showLineNumbers": true,
    "removeEmptyLines": true,
    "topFiles": [
      ".ai-status.md",
      "ARCHITECTURE.md",
      "docs/FUNCTIONAL_SPEC.md",
      "docs/DOMAIN_MODEL.md",
      "docs/UX_SPEC.md",
      "docs/API_CONTRACT.md"
    ]
  },
  "ignore": {
    "customPatterns": [
      ".env",
      ".env.*",
      "**/.env",
      "**/.env.*",
      "**/package-lock.json",
      "**/bun.lockb",
      "**/pnpm-lock.yaml",
      "**/.next/**",
      "**/dist/**",
      "**/public/images/**",
      "**/node_modules/**",
      
      ".gitignore",
      "verify_*.js",
      "verify_*.ts",
      "verify_*.mjs",
      "verification.log"
    ]
  }
}
